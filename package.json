		"@babel/plugin-transform-runtime": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@wordpress/eslint-plugin": "^5.1.0",
		"autoprefixer": "^9.7.6",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
