		"typescript": "^3.9.2",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./*.js,src/**/*.js?(x)": [
			"eslint --fix",
			"eslint"
		],
		"src/**/*.scss": [
			"stylelint --fix --syntax scss",
			"stylelint --syntax scss"
		],
		"*.php": [
			"composer run-script format",
			"composer run-script lint"
		]
	}
}
